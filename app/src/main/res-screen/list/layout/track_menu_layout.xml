<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/track_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff424242"
    android:visibility="invisible"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<at.markushi.ui.CircleButton
        android:id="@+id/center_item"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:src="@drawable/exit"
        app:cb_color="#D3D3D3"
        app:cb_pressedRingWidth="32dp"/>

    <com.ogaclejapan.arclayout.ArcLayout
        android:id="@+id/arc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:arc_axisRadius="100dp"
        app:arc_origin="center"
        app:arc_radius="135dp">

        <at.markushi.ui.CircleButton
            android:id="@+id/spotify"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/spotify"
            app:arc_origin="center"
            app:cb_color="#31721D"
            app:cb_pressedRingWidth="32dp"/>

        <at.markushi.ui.CircleButton
            android:id="@+id/soundcloud"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/soundcloud"
            app:arc_origin="center"
            app:cb_color="#A24A02"
            app:cb_pressedRingWidth="32dp"/>

        <at.markushi.ui.CircleButton
            android:id="@+id/youtube"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/youtube"
            app:arc_origin="center"
            app:cb_color="#A20114"
            app:cb_pressedRingWidth="32dp"/>


    </com.ogaclejapan.arclayout.ArcLayout>

</RelativeLayout>

